<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee"
	xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="WebApp_ID"
	version="2.4">
	<javaee:display-name>
		Computer Database
	</javaee:display-name>



	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<servlet>
		<javaee:description>
		</javaee:description>
		<javaee:display-name>
			TableauComputerServlet
		</javaee:display-name>
		<servlet-name>TableauComputerServlet</servlet-name>
		<servlet-class>main.java.web.TableauComputerServlet
		</servlet-class>
<!-- 		<load-on-startup>2</load-on-startup> -->
	</servlet>

	<servlet-mapping>
		<servlet-name>TableauComputerServlet</servlet-name>
		<url-pattern>/TableauComputerServlet</url-pattern>
<!-- 		<url-pattern>*.do</url-pattern> -->
	</servlet-mapping>

	<servlet>
		<javaee:description>
		</javaee:description>
		<javaee:display-name>
			ModifyOrAddComputerServlet
		</javaee:display-name>
		<servlet-name>ModifyOrAddComputerServlet</servlet-name>
		<servlet-class>
			main.java.web.ModifyOrAddComputerServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ModifyOrAddComputerServlet</servlet-name>
		<url-pattern>/ModifyOrAdd</url-pattern>
	</servlet-mapping>

	<servlet>
		<javaee:description>
		</javaee:description>
		<javaee:display-name>
			SaveComputerServlet
		</javaee:display-name>
		<servlet-name>SaveComputerServlet</servlet-name>
		<servlet-class>
			main.java.web.SaveComputerServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SaveComputerServlet</servlet-name>
		<url-pattern>/saveComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<javaee:description>
		</javaee:description>
		<javaee:display-name>
			DeleteComputerServlet
		</javaee:display-name>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<servlet-class>
			main.java.web.DeleteComputerServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/session.tld</taglib-uri>
			<taglib-location>/WEB-INF/session.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>