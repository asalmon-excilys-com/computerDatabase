		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/session.tld</taglib-uri>
			<taglib-location>/WEB-INF/session.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>