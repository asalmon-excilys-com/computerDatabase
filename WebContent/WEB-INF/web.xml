		<javaee:display-name>
			SaveComputerServlet
		</javaee:display-name>
		<servlet-name>SaveComputerServlet</servlet-name>
		<servlet-class>
			excilys.main.web.SaveComputerServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SaveComputerServlet</servlet-name>
		<url-pattern>/saveComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<javaee:description>
		</javaee:description>
		<javaee:display-name>
			SaveNewComputerServlet
		</javaee:display-name>
		<servlet-name>SaveNewComputerServlet</servlet-name>
		<servlet-class>
			excilys.main.web.SaveNewComputerServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SaveNewComputerServlet</servlet-name>
